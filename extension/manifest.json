{
  "manifest_version": 3,
  "name": "TEXA Tools Manager",
  "version": "1.0.0",
  "description": "Mengelola tools dari dashboard TEXA secara aman dan terintegrasi.",
  "permissions": [
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://*.vercel.app/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectedScript.js"],
      "matches": ["http://localhost/*", "https://*.vercel.app/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TEXA Tools Manager"
  }
}
